<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="400.0" prefWidth="600.0" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <Label text="Проект:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="projectName">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <Label text="Описание:">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </Label>
      <TextArea fx:id="projectDesc" prefHeight="130.0">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></TextArea>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Производства">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tableFactory" layoutX="-9.0" layoutY="5.0" prefHeight="154.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <columns>
                              <TableColumn fx:id="columnNumberFactory" minWidth="20.0" prefWidth="75.0" text="#" />
                            <TableColumn fx:id="columnNameFactory" minWidth="150.0" prefWidth="75.0" text="Название" />
                              <TableColumn fx:id="columnLatFactory" minWidth="75.0" prefWidth="75.0" text="Широта" />
                              <TableColumn fx:id="columnLonFactory" minWidth="75.0" prefWidth="75.0" text="Долгота" />
                              <TableColumn fx:id="columnWeightFactory" minWidth="50.0" prefWidth="75.0" text="Объем производства" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Станции">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tableStation" layoutX="14.0" layoutY="-41.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <columns>
                              <TableColumn fx:id="columnNumberStation" editable="false" minWidth="20.0" prefWidth="50.0" text="#" />
                            <TableColumn fx:id="columnNameStation" minWidth="100.0" prefWidth="75.0" text="Название" />
                            <TableColumn fx:id="columnLatStation" minWidth="75.0" prefWidth="75.0" text="Широта" />
                              <TableColumn fx:id="columnLonStation" minWidth="75.0" prefWidth="75.0" text="Долгота" />
                              <TableColumn fx:id="columnIsLogCentre" minWidth="20.0" prefWidth="75.0" text="Логистический центр" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</fx:root>
